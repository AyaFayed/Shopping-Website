<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        background-image: url("background3.jpg");
        background-repeat: no-repeat;
        background-size: 100%;
      }

      h1 {
        color: white;
        text-align: center;
        -webkit-text-stroke: 1px blue;
      }
      .card-horizontal {
        display: flex;
        flex: 1 1 auto;
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Cart</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
      <a class="navbar-brand" style="color: rgb(191, 255, 161)">Cart</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto"></ul>
        <form method="POST" action="/search" class="form-inline my-2 my-lg-0">
          <input
            class="form-control mr-sm-2"
            name="Search"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
            Search
          </button>
        </form>
      </div>
    </nav>
    <div>
      <% if (userCart.length==0) { %>
      <div style="color: aliceblue">Nothing</div>
      <% }%> <% for (let prod of userCart) { %>
      <div class="card">
        <div class="card-horizontal">
          <div class="img-square-wrapper">
            <img class="" src="<%=prod.image %>" width="200" height="250" />
          </div>
          <div class="card-body">
            <h4 class="card-title"><%= prod.name %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= prod.category %></h6>
            <h6 class="card-subtitle mb-2 mt-2">Quantity : <%= prod.qty %></h6>
            <p class="card-text"><%= prod.description %></p>
            <a class="btn btn-info" href="<%= `${prod.ref}` %>"> view item</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <form method="POST" action="/cart">
      <button type="submit" class="btn btn-outline-success my-2 my-sm-0">
        Delete Cart
      </button>
    </form>
  </body>
</html>
